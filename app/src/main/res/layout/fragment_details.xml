<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_app_ramdom_1"
                android:id="@+id/fragDet_appImg"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragDet_appName"
                android:textAllCaps="true"
                android:textSize="@dimen/sizeTextTApp"
                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragDet_appNameDev"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sizeTextApp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragDet_appDetails"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/sizeTextApp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragDet_btnUpd_Unins"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/fragDet_btnOpenUrl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="@string/txt_btnOpen"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>